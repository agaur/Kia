<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <a href="javascript: void(0);" class="close" data-dismiss="modal">&#215;</a>
      <h3>Select an Employee</h3>
    </div>

    <div class="modal-body">
      <div class="checkbox">
        <label>
          <input type="checkbox"> Send welcome email to employee
        </label>
      </div>
      <div class="form-group">
        <label for="team">Select a team in organisation</label>
        <select id="team" class="form-control" placeholder="Select Team...">
          <% _.forEach(teams, function(team){
          %>
          <option value="<%=team%>"><%=team%></option>
          <%
          })%>
        </select>
      </div>
      <div class="form-group">
        <label for="employee">Select an employee</label>
        <select id="employee" class="form-control" placeholder="Select Employees.."></select>
      </div>
    </div>
    <div class="modal-footer">
      <a href="javascript: void(0);" class="btn" data-dismiss="modal">Cancel</a>
      <a href="javascript: void(0);" class="btn btn-primary add">Ok</a>
    </div>
  </div>
</div>
